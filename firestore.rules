rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is staff
    function isStaff() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'instructor', 'ceo', 'manager'];
    }
    
    // Helper function to check if user is admin or CEO
    function isAdminOrCEO() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'ceo'];
    }
    
    // Users collection
    match /users/{userId} {
      // Allow reading for:
      // 1. Authenticated users (own profile or staff)
      // 2. Unauthenticated users during enrollment (to check if email exists)
      // 3. Public verification page
      allow read: if true; 
      // Allow create during enrollment (unauthenticated) or if authenticated
      allow create: if true; // Anyone can create during enrollment
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdminOrCEO());
      allow delete: if isAdminOrCEO();
      
      // User subcollections (progress, etc.)
      match /progress/{progressId} {
        allow read: if true; // Allow public read for verification page
        allow write: if isAuthenticated() && (request.auth.uid == userId || isStaff());
      }
      
      // Business course progress
      match /business_progress/{courseId} {
        allow read: if true; // Allow public read for verification page
        allow write: if isAuthenticated() && (request.auth.uid == userId || isStaff());
      }
    }
    
    // Courses collection (top-level and subcollections)
    match /courses/{courseId} {
      allow read: if true; // Publicly readable for verification/courses list
      allow write: if isStaff();
      
      // Modules subcollection
      match /modules/{moduleId} {
        allow read: if true;
        allow write: if isStaff();
      }
      
      // Lessons subcollection
      match /lessons/{lessonId} {
        allow read: if true;
        allow write: if isStaff();
      }
    }
    
    // Standalone modules collection
    match /modules/{moduleId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Quizzes collection
    match /quizzes/{quizId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Quiz submissions
    match /quiz_submissions/{submissionId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || isStaff());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isStaff();
    }
    
    // Enrollments
    match /enrollments/{enrollmentId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
    }
    
    // Job opportunities (public read, staff write)
    match /opportunities/{opportunityId} {
      allow read: if true; // Public
      allow write: if isStaff();
    }
    
    match /job_opportunities/{jobId} {
      allow read: if true; // Public
      allow write: if isStaff();
    }
    
    // Equipment tools (public read, staff write)
    match /equipment/{itemId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Gallery assets (public read, staff write)
    match /gallery/{itemId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Testimonials (Public/Student create, staff manage, approved read)
    match /testimonials/{testimonialId} {
      allow read: if isStaff() || (resource.data.status == 'approved');
      allow create: if true; // Public and students can submit
      allow update, delete: if isStaff();
    }
    
    // Forum posts
    match /forum_posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               (resource.data.authorId == request.auth.uid || isStaff());
    }
    
    // Forum comments
    match /forum_comments/{commentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                               (resource.data.authorId == request.auth.uid || isStaff());
    }
    
    // Messages/chats
    match /messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    match /chats/{chatId} {
      allow read, write: if isAuthenticated();
      
      // Chat messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Sessions/schedules
    match /sessions/{sessionId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
    }
    
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
    }
    
    // Announcements
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isStaff();
      allow update, delete: if isAuthenticated() && 
                               (resource.data.userId == request.auth.uid || isStaff());
    }
    
    // Videos
    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
    }
    
    // Activity logs
    match /activity/{activityId} {
      allow read: if isStaff();
      allow create: if isAuthenticated();
      allow update, delete: if isStaff();
    }
    
    // Subscribers
    match /subscribers/{subscriberId} {
      allow read: if isStaff();
      allow create: if true; // Public can subscribe
      allow update, delete: if isStaff();
    }
    
    // Contact messages
    match /contact_messages/{messageId} {
      allow read: if isStaff();
      allow create: if true; // Public can send messages
      allow update, delete: if isStaff();
    }
    
    // Password Reset Tokens
    match /password_reset_tokens/{tokenId} {
      // Allow reading token data to validate it
      allow read: if true;
      // Allow creating tokens
      allow create: if true;
      // Allow updating (marking as used)
      allow update: if true;
      // Allow deleting
      allow delete: if true;
    }
    
    // Business courses (if separate from main courses)
    match /business_courses/{courseId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
      
      // Chapters subcollection
      match /chapters/{chapterId} {
        allow read: if isAuthenticated();
        allow write: if isStaff();
      }
      
      match /modules/{moduleId} {
        allow read: if isAuthenticated();
        allow write: if isStaff();
      }
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
