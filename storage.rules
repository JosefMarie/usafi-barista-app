rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /opportunities/{allPaths=**} {
      // Allow public writes for posting opportunities
      // and public reads for viewing them.
      allow read, write: if true;
    }

    match /testimonials/{allPaths=**} {
      // Allow public to upload testimonial pictures
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null; // Only staff (auth users) can manage
    }

    match /equipment/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Other files might need different rules
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
